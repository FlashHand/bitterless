{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/**/src/env.d.ts",
    "src/renderer/**/src/**/*",
    "src/renderer/**/src/**/*.vue",
    "src/renderer/common/**/*",
    "src/preload/*.d.ts",
    "src/preload/**/rigchat.preload.type.ts",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@/*": [
        "src/renderer/home/src/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ]
    }
  }
}
